      "cpp-stdlib-cerrno",
      "cpp-stdlib-cmath",
      "cpp-stdlib-cpp",
      "cpp-ecosystem",
      "cpp-platform-macros",
      "cpp-lib-boost",
      "cpp-people",

      "!aws",
      "!companies",
      "!cryptocurrencies",
      "!filetypes",
      "!fullstack",
      "!node",
      "!npm"
