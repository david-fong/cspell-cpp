   "language": "en-GB",
   "enabledLanguageIds": ["cpp"],
   "allowCompoundWords": false,
   "dictionaries": [
      "!cpp", // disable bundled cpp dictionary.
      "!softwareTerms", // hmm... not sure about disabling this.

      "cpp-lang-keywords",
